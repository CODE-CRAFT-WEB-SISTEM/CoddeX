<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="keywords" content="">
  <title>CoddeX</title>
  <meta name="description" content="CoddeX Blog for Developer">
   <meta name="keywords" content="Programador, coddex, CoddeX, Gabriel Rodrigues Lima">
   <meta name="author" content="Gabriel Rodrigues Lima">
   <!-- Controle de compatibilidade para IE -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Tag Open Graph para redes sociais -->
    <meta property="og:title" content="CoddeX">
    <meta property="og:description" content="CoddeX Blog for Developer">
    <meta property="og:image" content="/assets/admin1.png">
    <meta property="og:url" content="https://coddex.store">
    <meta property="og:type" content="website">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="/styles/style.css" type="text/css" media="all" />
  <link rel="shortcut icon" href="/assets/admin1.png" type="image/x-icon">
</head>
<body class="bg-dark text-white">

<!-- Navbar -->
<nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <img src="/assets/admin1.png" alt="CoddeX" />
    </a>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="#sobre">Sobre</a></li>
        <li class="nav-item"><a class="nav-link" href="#projetos">Projetos</a></li>
        <li class="nav-item"><a class="nav-link" href="#certificados">Certificados</a></li>
        <li class="nav-item"><a class="nav-link" href="#contato">Contato</a></li>
      </ul>
    </div>
  </div>
</nav>

<!-- Hero Section -->
<div class="text-center py-5 header">
  <h1 data-animate><%= contentIndex.title %></h1>
  <p data-animate><%= contentIndex.subtitle %></p>
</div>

<!-- Sobre mim -->
<section id="sobre" class="py-5">
  <div class="container">
    <h2 class="text-center mb-4"><%= contentIndex.titleAboutMe %></h2>
    <p><%= contentIndex.textAboutMe %></p>
  </div>
</section>

<!-- Projetos Section -->
<section id="projetos" class="py-5">
  <div class="container">
    <h2 class="text-center mb-4" data-animate>Meus Projetos</h2>
    <div class="containerProjects row g-4">
      <% projects.forEach(project => { %>
        <div class="col-md-4" data-animate>
          <div class="card">
            <img src="<%= project.imagePj %>" class="imageCard card-img-top" alt="<%= project.title %>">
            <div class="card-body contentCard">
              <h5 class="card-title"><%= project.titlePj %></h5>
              <p class="card-text"><%= project.descriptionPj %></p>
              <a href="<%= project.linkPj %>" class="btn btn-danger">Saiba mais</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

<!-- Certificados -->
<section id="certificados" class="py-5 certificados">
  <div class="container">
    <h2 class="text-center mb-4" data-animate>Certificados</h2>
    <div class="row g-4 text-center">
      <% certificates.forEach(certificate => { %>
        <div class="col-md-3" data-animate>
          <a href="<%= certificate.url %>" target="_blank">
            <img src="<%= certificate.image %>" alt="<%= certificate.id %>" class="img-fluid">
          </a>
          <p class="mt-2"><%= certificate.title %></p>
        </div>
      <% }); %>
    </div>
  </div>
</section>

<!-- Linha do Tempo -->
<section id="experiencia" class="py-5">
  <div class="container">
    <h2 class="text-center mb-4" data-animate>Minha Jornada</h2>
    <div class="timeline">
      <div class="timeline-item" data-animate>
        <h5>2022</h5>
        <p>Comecei meus estudos em desenvolvimento web.</p>
      </div>
      <div class="timeline-item" data-animate>
        <h5>2023</h5>
        <p>Primeiro projeto freelance concluído.</p>
      </div>
      <div class="timeline-item" data-animate>
        <h5>2024</h5>
        <p>Lancei meu portfólio profissional!</p>
      </div>
    </div>
  </div>
</section>

<!-- Formulário de Contato -->
<section id="contato" class="py-5">
  <div class="container" data-animate>
    <h2 class="text-center mb-4">Entre em Contato</h2>
    
    <form action="/sms/env" method="POST">
      <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" name="name" id="name" placeholder="Digite seu nome" required>
      </div>
      <div class="mb-3">
        <label for="zap" class="form-label">Whatsapp</label>
        <input type="number" class="form-control" id="zap" name="phone" placeholder="D igite seu numero de contato" required>
      </div>
      <div class="mb-3">
        <la bel for="email" class="form-label">E-mail</label>
        <input type="email" name="email" class="form-control" id="email" placeholder="Digite seu e-mail" required>
      </div>
      <div class="mb-3">
        <label for="mensagem" class="form-label">Mensagem</label>
        <textarea class="form-control" id="mensagem" name="messenger" rows="4" placeholder="Digite sua mensagem" required></textarea>
      </div>
      <button type="submit" class="btn btn-danger">Enviar</button>
    </form>
  </div>
</section>

<!-- Footer -->
<footer class="bg-dark text-white py-4">
  <div class="container text-center">
    <p>© 2024 Meu Portfólio - Todos os direitos reservados</p>
    <div>
      <a href="#" class="text-white mx-2"><i class="fab fa-github fa-lg"></i></a>
      <a href="#" class="text-white mx-2"><i class="fab fa-linkedin fa-lg"></i></a>
      <a href="#" class="text-white mx-2"><i class="fab fa-instagram fa-lg"></i></a>
    </div>
  </div>
</footer>

<script src="/script/index.js" type="module"></script>

</body>
</html>