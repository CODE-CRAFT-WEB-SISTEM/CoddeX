<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog - CoddeX</title>
  <meta name="description" content="CoddeX Web Developer">
  <meta name="keywords" content="Programador, coddex, CoddeX, CoddeX Developer, Programador">
  <meta name="author" content="Gabriel Rodrigues Lima">
  <meta property="og:title" content="CoddeX Developer">
  <meta property="og:description" content="Bog for CoddeX Web Developer">
  <meta property="og:image" content="/assets/admin1.png">
  <meta property="og:url" content="https://coddex.store">
  <meta property="og:type" content="website">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
  <link rel="stylesheet" href="./styles/style.css" type="text/css" media="all" />
  <link rel="shortcut icon" href="/assets/admin1.png" type="image/x-icon">
</head>
<body class="bg-dark text-white">

<!-- Navbar -->
<nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <img src="/assets/admin1.png" alt="CoddeX" />
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="#sobre"><i class="bi bi-person-circle me-1"></i>Sobre</a></li>
        <li class="nav-item"><a class="nav-link" href="#projetos"><i class="bi bi-code-slash me-1"></i>Projetos</a></li>
        <li class="nav-item"><a class="nav-link" href="#certificados"><i class="bi bi-mortarboard me-1"></i>Certificados</a></li>
        <li class="nav-item"><a class="nav-link" href="#contato"><i class="bi bi-envelope me-1"></i>Contato</a></li>
      </ul>
    </div>
  </div>
</nav>

<!-- Hero Section -->
<div class="text-center py-5 header">
  <h1 data-animate><%= contentIndex.title %></h1>
  <p data-animate><%= contentIndex.subtitle %></p>
  <a style="border-radius:100px; padding: .5rem 2rem;" class="btn bg-outline-white mt-5" href="#contato" data-animate>Entrar em contato</a>
</div>

<!-- Sobre mim -->
<section id="sobre" class="py-5">
  <div class="container">
    <h2 class="text-center mb-4" data-animate-bottom><%= contentIndex.titleAboutMe %></h2>
    <p data-animate-bottom><%= contentIndex.textAboutMe %></p>
  </div>
</section>

<!-- Projetos Section -->
<section id="projetos" class="py-5">
  <div class="container">
    <h2 class="text-center mb-4" data-animate-bottom>Meus Projetos</h2>
    <div class="containerProjects row g-4">

    <% if (projects.length > 0) { %>

      <% projects.forEach(project => { %>
        <div class="col-md-4" data-animate-bottom>
          <div class="card cardProject">
            <img src="<%= project.imagePj %>" class="imageCard card-img-top" alt="<%= project.title %>">
            <div class="card-body contentCard">
              <h5 class="card-title"><%= project.titlePj %></h5>
              <p class="card-text"><%= project.descriptionPj %></p>
              <a href="<%= project.linkPj %>" class="btn btn-danger">View DEMO</a>
            </div>
          </div>
        </div>
      <% }); %>
 
     <% } else { %>

      <!-- Mensagem Caso Não Haja Certificados -->
      <div class="col-12">
        <div class="alert alert-warning text-center my-5 mx-2" data-animate-bottom>
          Nenhum Projeto foi postado até o momento.
        </div>
      </div>
    <% } %>         
      
    </div>
  </div>
</section>

<!-- Certificados -->
<section id="certificados" class="py-5 certificados">
  <h2 class="text-center mb-5" data-animate-bottom>Certificados</h2>

    <div class="certificateContainer" data-animate-bottom>
      <% if (certificates.length > 0) { %>
        <% certificates.forEach(certificate => { %>
          <div class="cardCertificate">

              <img 
                src="<%= certificate.image %>" 
                class="imageCerificate" 
                alt="<%= certificate.title %>">
                
              <div class="contentCertificate">
                <h6 class="card-title"><%= certificate.title %></h6>
                <a 
                   href="<%= certificate.url %>" 
                  class="btn btn-danger btnCertificate">
                  <i class="bi bi-eye me-2"></i>View
                </a>
              </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-warning text-center" data-animate-bottom>
            Nenhum certificado foi postado até o momento.
          </div>
        </div>
      <% } %>
    </div>
</section>

<!-- Linha do Tempo -->
<section id="experiencia" class="py-5">
  <div class="container">
    <h2 class="text-center mb-4" data-animate>Minha Jornada</h2>
    <div class="timeline">
      <div class="timeline-item" data-animate>
        <h5>2022</h5>
        <p>Comecei meus estudos em desenvolvimento web.</p>
      </div>
      <div class="timeline-item" data-animate>
        <h5>2023</h5>
        <p>Primeiro projeto freelance concluído.</p>
      </div>
      <div class="timeline-item" data-animate>
        <h5>2024</h5>
        <p>Lancei meu portfólio profissional!</p>
      </div>
    </div>
  </div>
</section>

<!-- Formulário de Contato -->
<section id="contato" class="py-5">
  <div class="container d-flex justify-content-center">
    <div class="col-md-7 col-lg-6" data-animate-bottom>
      <h2 class="text-center mb-4">Entre em Contato</h2>
      <form action="/sms/env" method="POST">
        <div class="mb-3">
          <label for="nome" class="form-label">Nome</label>
          <input type="text" class="form-control rounded-pill" name="name" id="name" placeholder="Digite seu nome" required>
        </div>
        <div class="mb-3">
          <label for="zap" class="form-label">Whatsapp</label>
          <input type="number" class="form-control rounded-pill" id="zap" name="phone" placeholder="Digite seu número de contato" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">E-mail</label>
          <input type="email" name="email" class="form-control rounded-pill" id="email" placeholder="Digite seu e-mail" required>
        </div>
        <div class="mb-3">
          <label for="mensagem" class="form-label">Mensagem</label>
          <textarea class="form-control rounded-3" id="mensagem" name="messenger" rows="4" placeholder="Digite sua mensagem" required></textarea>
        </div>
        <button type="submit" class="btn btn-danger w-100 rounded-pill">Enviar</button>
      </form>
    </div>
  </div>
</section>

<!-- Footer -->
<footer class="bg-dark text-white py-4">
  <div class="container text-center">
    <p>© 2024 Meu Portfólio - Todos os direitos reservados</p>
    <div>
      <a href="#" class="text-white mx-2"><i class="fab fa-github fa-lg"></i></a>
      <a href="#" class="text-white mx-2"><i class="fab fa-linkedin fa-lg"></i></a>
      <a href="#" class="text-white mx-2"><i class="fab fa-instagram fa-lg"></i></a>
    </div>
  </div>
</footer>
<button class="btn-certificate">Certificado 1</button>
<button class="btn-certificate">Certificado 2</button>

<script src="./script/index.js" type="module"></script>
</body>
</html>