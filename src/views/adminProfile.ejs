   <input type="file" id="file" name="logo">
</label>


    <div class="mb-3">
      <label for="username" class="form-label text-white">Nome de Usuário</label>
      <div class="input-group">
        <span class="input-group-text bg-dark text-white"><i class="bi bi-person-fill"></i></span>
        <input 
          type="text" 
          class="form-control bg-dark border-white text-white" 
          id="username" 
          name="username" 
          value="<%= adminUser.username %>" 
          required  
        >
      </div>
    </div>

    <div class="mb-3">
      <label for="password" class="form-label text-white">Nova Senha</label>
      <div class="input-group">
        <span class="input-group-text bg-dark text-white">
          <i class="bi bi-lock-fill"></i>
        </span>
        <input
          type="password"
          class="form-control bg-dark border-white text-white"
          id="password"
          name="password"
          placeholder="Digite uma nova senha"
          value="<%= adminUser.password %>"
          required  >
      </div>
    </div>

    <div class="mb-3">
      <label for="contact" class="form-label text-white">Número de Contato</label>
      <div class="input-group">
        <span class="input-group-text bg-dark text-white">
          <i class="bi bi-telephone-fill"></i>
        </span>
        <input
          type="text"
          class="form-control bg-dark border-white text-white"
          id="contact"
          name="contact"
          value="<%= adminUser.contact %>">
      </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
      <button
        class="btn btn-primary d-flex align-items-center"
        type="button"
        data-bs-toggle="offcanvas"
        data-bs-target="#offcanvasBottom"
        aria-controls="offcanvasBottom">
        <i class="bi bi-save me-2"></i>Salvar alterações
      </button>
      <a href="/admin/dashboard" class="btn btn-secondary d-flex align-items-center">
        <i class="bi bi-arrow-left-circle me-2"></i>Voltar
      </a>
    </div>

    <!-- Offcanvas Modal for Delete Confirmation -->
    <div
      class="offcanvas offcanvas-bottom"
      tabindex="-1"
      id="offcanvasBottom"
      aria-labelledby="offcanvasBottomLabel">
      <div class="offcanvas-header bg-dark text-white">
        <h5 class="offcanvas-title" id="offcanvasBottomLabel">AVISO!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body bg-dark text-white">
        <p>Após salvar as alterações você será redirecionado para a página de Login.</p>
        <button type="submit" class="btn btn-primary d-flex align-items-center">
          <i class="bi bi-check-circle-fill me-2"></i>Confirmar
        </button>
      </div>
    </div>
  </form>
</div>

<%- include('fragments/footer') %>