<%- include('fragments/header') %>

<div class="container-fluid mt-5 px-4">
  <!-- Botão de Voltar -->
  <div class="text-center mb-4">
    <a href="/admin/dashboard" class="btn btn-outline-danger rounded-pill px-4 py-2 shadow-sm">
      <i class="bi bi-house me-2"></i>Voltar para Home
    </a>
  </div>

  <h2 class="text-white text-center mb-4">Perfil do Administrador</h2>

  <div class="card bg-dark text-white shadow-lg p-4 mx-auto" style="max-width: 500px; border-radius: 12px;">
    <form action="/admin/dashboard/adminProfile" enctype="multipart/form-data" method="post">
      
      <!-- Upload de Imagem -->
      <label class="custum-file-upload d-flex flex-column align-items-center p-3 border rounded bg-secondary bg-opacity-25" for="file">
        <div class="icon mb-2">
          <i class="bi bi-cloud-upload fs-1"></i>
        </div>
        <span>Upload da Logo</span>
        <input type="file" id="file" name="logo" hidden>
      </label>

      <!-- Nome de Usuário -->
      <div class="form-floating mt-4">
        <input type="text" class="form-control bg-dark border-white text-white rounded-3" id="username" name="username" value="<%= adminUser.userAdmin %>" required>
        <label for="username" class="text-white"><i class="bi bi-person-fill me-2"></i>Nome de Usuário</label>
      </div>

      <!-- Nova Senha -->
      <div class="form-floating mt-3">
        <input type="password" class="form-control bg-dark border-white text-white rounded-3" id="password" name="password" placeholder="Digite uma nova senha" value="<%= adminUser.passAdmin %>" required>
        <label for="password" class="text-white"><i class="bi bi-lock-fill me-2"></i>Nova Senha</label>
      </div>

      <!-- Número de Contato -->
      <div class="form-floating mt-3">
        <input type="text" class="form-control bg-dark border-white text-white rounded-3" id="contact" name="contact" value="<%= adminUser.contact %>">
        <label for="contact" class="text-white"><i class="bi bi-telephone-fill me-2"></i>Número de Contato</label>
      </div>

      <!-- Botão de Salvar -->
      <div class="d-flex justify-content-center mt-4">
        <button class="btn btn-primary btn-lg d-flex align-items-center rounded-pill shadow-sm px-4 py-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasBottom" aria-controls="offcanvasBottom">
          <i class="bi bi-save me-2"></i>Salvar alterações
        </button>
      </div>

      <!-- Offcanvas de Confirmação -->
      <div class="offcanvas offcanvas-bottom bg-dark text-white" tabindex="-1" id="offcanvasBottom" aria-labelledby="offcanvasBottomLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasBottomLabel">AVISO!</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body text-center">
          <p>Após salvar as alterações, você será redirecionado para a página de Login.</p>
          <button type="submit" class="btn btn-success btn-lg d-flex align-items-center rounded-pill shadow-sm px-4 py-2">
            <i class="bi bi-check-circle-fill me-2"></i>Confirmar
          </button>
        </div>
      </div>

    </form>
  </div>
</div>

<%- include('fragments/footer') %>