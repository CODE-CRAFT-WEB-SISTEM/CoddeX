<%- include('fragments/header') %>

<div class="container mt-5">
  
  <!-- Botão de Voltar -->
  <div class="text-center mb-4">
    <a href="/admin/dashboard" class="btn btn-outline-danger rounded-pill px-4 py-2 shadow-sm">
      <i class="bi bi-house me-2"></i>Voltar para Home</a>
  </div>  
  
  <h2 class="text-white text-center">Perfil do Administrador</h2>

  <form action="/admin/dashboard/adminProfile" enctype="multipart/form-data" method="post">
    
    /* From Uiverse.io by Yaya12085 */ 
