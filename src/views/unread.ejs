<%- include('fragments/header') %>

<div class="container my-5">
  <!-- Botão de Voltar -->
  <div class="text-center mb-4">
    <a href="/admin/dashboard" class="btn btn-outline-danger rounded-pill px-4 py-2 shadow-sm">
      <i class="bi bi-house-fill me-2"></i>Return Home
    </a>
  </div>

  <div class="btn-group mb-4">
    <a href="/admin/dashboard/messages" class="btn btn-outline-warning" aria-current="page">All</a>
    <a href="#" class="btn btn-outline-warning active">Unread</a>
  </div>

  <!-- Lista de Mensagens -->
  <div class="row justify-content-center g-4">
    <% newMessages.forEach(function(note) { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <a class="text-decoration-none" id="<%= note.id %>" href="/admin/dashboard/messages/<%= note.id %>">
          <div class="card shadow-lg border-0 rounded-4 text-center h-100">
            <div class="card-body d-flex justify-content-between align-items-center">
              <!-- Ícone de mensagem à esquerda -->
              <% if (!note.completed) { %>
                <i class="bi bi-envelope display-1 text-warning"></i> <!-- Carta fechada -->
              <% } else { %>
                <i class="bi bi-envelope-open display-1 text-success"></i> <!-- Carta aberta -->
              <% } %>
              <!-- Informações à direita -->
              <div class="text-end">
                <!-- Nome -->
                <h5 class="card-title mb-2 text-white fw-bold"><%= note.name %></h5>
                <!-- Data e Hora -->
                <p class="text-secondary mb-0"><i class="bi bi-calendar-week"></i> <%= note.data %></p>
                <p class="text-secondary mb-0"><i class="bi bi-clock-history"></i> <%= note.time %></p>
              </div>
            </div>
            <!-- Rodapé da mensagem -->
            <div class="card-footer bg-light rounded-bottom-4">
              <% if (!note.completed) { %>
                <span class="badge bg-warning text-dark rounded-pill px-3 py-1">Pendente</span>
              <% } else { %>
                <span class="badge bg-success rounded-pill px-3 py-1">Concluído</span>
              <% } %>
            </div>
          </div>
        </a>
      </div>
    <% }); %>
  </div>
</div>

<%- include('fragments/footer') %>