<%- include('fragments/header') %>

<main class="container py-5">
  <h1 class="text-center mb-4 text-white">Certificados</h1>
  <div class="row">
    <% if (myCertificates.length > 0) { %>
      <% myCertificates.forEach((certificate) => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card shadow-sm">
            <!-- Imagem do Certificado -->
            <img 
              src="<%= certificate.image %>" 
              class="card-img-top" 
              alt="<%= certificate.id %>"
              style="height: 200px; object-fit: cover;"
            >
            <div class="card-body">
              <!-- Título -->
              <h5 class="card-title text-dark"><%= certificate.title %></h5>
              <!-- Botão para Visualizar -->
              <a 
                href="<%= certificate.id %>" 
                class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-eye me-2"></i>Ver Certificado
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <!-- Mensagem Caso Não Haja Certificados -->
      <div class="col-12">
        <div class="alert alert-warning text-center">
          Nenhum certificado foi postado até o momento.
        </div>
      </div>
    <% } %>
  </div>
</main>

<%- include('fragments/footer') %>